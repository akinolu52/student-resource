{% extends 'master' %}

{% block title %}
  Showing {{ student.matric_no }}
{% endblock %}

{% block content %}
  <div class="w3_agile_main_left">
    <div class="col-md-4 col-md-offset-4 w3layouts-second">
      <div class="w3l_main_grid1_w3ls_grid">
        <h3>Edit {{ student.firstname }}</h3>
        <div class="w3_agile_main_left_grid_w3_agileits">
          {% include 'errors.form' %}
          {% include 'errors.status' %}
          <form action="/student/{{ student.id }}?_method=PUT" method="post">
            {{ csrfField }}
            <div class="agileits_w3layouts_user">
              <input type="text" name="matric_no" placeholder="Matric Number" readonly value="{{ student.matric_no }}" required>
            </div>
            <div class="agileits_w3layouts_user">
              <input type="text" name="firstname" placeholder="Firstname" value="{{ student.firstname }}" required>
            </div>
            <div class="agileits_w3layouts_user">
              <input type="text" name="lastname" placeholder="Lastname" value="{{ student.lastname }}" required>
            </div>
            <div class="agileits_w3layouts_user">
              <select name="number_of_course" class="form-control" required>
                <option>--Number of course--</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
              </select>
            </div>
            <div class="agileits_w3layouts_user">
              <select name="level" class="form-control" required>
                <option value="100">100 level</option>
                <option value="200">200 level</option>
                <option value="300">300 level</option>
                <option value="400">400 level</option>
                <option value="500">500 level</option>
              </select>
            </div>
						<div class="agileits_w3layouts_user">
							<input type="text" name="department" placeholder="Department" value="{{ student.department }}" required>
						</div>
						<div class="agileits_w3layouts_user">
							<input type="text" name="faculty" placeholder="Faculty"  value="{{ student.faculty }}" required>
						</div>
						<div class="agileits_w3layouts_user">
							<input type="text" name="next_of_kin" placeholder="Next of Kin Fullname" value="{{ student.next_of_kin }}" required>
						</div>
						<div class="agileits_w3layouts_user">
							<input type="number" name="cgpa" placeholder="CGPA" required value="{{ student.cgpa }}" step="any">
						</div>
            <input type="submit" value="Sign Up">
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
{% endblock %}
